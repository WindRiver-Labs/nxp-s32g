From: Ghennadi Procopciuc <ghennadi.procopciuc@nxp.com>
Date: Thu, 29 Jul 2021 10:13:19 +0300
Subject: [PATCH 28/49] bindings: mfd: Add shared memory to LLCE core

commit e7fbe823ab7da6d53ae7cd54cf0faaca4e45f8c2 from
https://source.codeaurora.org/external/autobsps32/linux

Upstream-Status: Pending

Issue: ALB-5830
Signed-off-by: Ghennadi Procopciuc <ghennadi.procopciuc@nxp.com>
Signed-off-by: Zhantao Tang <zhantao.tang@windriver.com>
---
 .../bindings/mfd/nxp,s32g-llce-core.yaml      | 21 +++++++++++++++----
 1 file changed, 17 insertions(+), 4 deletions(-)

diff --git a/Documentation/devicetree/bindings/mfd/nxp,s32g-llce-core.yaml b/Documentation/devicetree/bindings/mfd/nxp,s32g-llce-core.yaml
index 13c3e013ae6a..19670c8e0e97 100644
--- a/Documentation/devicetree/bindings/mfd/nxp,s32g-llce-core.yaml
+++ b/Documentation/devicetree/bindings/mfd/nxp,s32g-llce-core.yaml
@@ -29,13 +29,22 @@ properties:
       - const: frpe.bin
 
   memory-region:
-    maxItems: 5
-    minItems: 5
+    maxItems: 6
+    minItems: 6
     description: |
       A set of phandles to memory regions corresponding to the firmware
       components and a link to the region where the firmware load status
       can be read.
 
+  memory-region-names:
+    items:
+      - const: dte.bin
+      - const: ppe_rx.bin
+      - const: ppe_tx.bin
+      - const: frpe.bin
+      - const: shmem
+      - const: status
+
   reg-names:
     const: sysctrl
 
@@ -77,6 +86,7 @@ required:
   - compatible
   - firmware-name
   - memory-region
+  - memory-region-names
   - reg-names
   - reg
   - clock-names
@@ -104,8 +114,11 @@ examples:
             firmware-name = "dte.bin", "ppe_rx.bin",
                 "ppe_tx.bin", "frpe.bin";
             memory-region = <&llce0_sram>, <&llce1_sram>,
-                <&llce2_sram>, <&llce3_sram>,
-                <&llce_boot_status>;
+                            <&llce2_sram>, <&llce3_sram>,
+                            <&llce_shmem>, <&llce_boot_status>;
+            memory-region-names = "dte.bin", "ppe_rx.bin",
+                                  "ppe_tx.bin", "frpe.bin",
+                                  "shmem", "status";
             reg = <0x6 0 0x0 0xc>;
             reg-names = "sysctrl";
             /* RX-IN_FIFO */
